<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hqy.blog.dao.ArticleDao">

    <select id="articles" resultType="com.hqy.blog.dto.PageArticleDTO">
        SELECT
        a.id, a.title, a.description, a.cover, a.`type`, a.created
        FROM t_article a
        ORDER BY a.created DESC
    </select>

</mapper>