<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hqy.blog.dao.ArticleDao">

    <update id="deleteArticles">
        UPDATE t_article SET `deleted` = 1, `updated` = now()
        WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </update>

    <select id="articles" resultType="com.hqy.blog.dto.PageArticleDTO">
        SELECT
        a.id, a.title, a.description, a.cover, a.`type`, a.created, a.status
        FROM t_article a
        <where>
            <if test="status != null">
                `status` = 1
            </if>
            <if test="type != null">
                AND `type` = #{type}
            </if>
        </where>
        ORDER BY a.created DESC
    </select>

</mapper>